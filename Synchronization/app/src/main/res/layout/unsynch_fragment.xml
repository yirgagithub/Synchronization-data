<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unSynch_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.the.example.synchronization.UnSynchFragment"
    android:background="@color/listView_background_color">

   <Button
    android:id="@+id/synchAllButton_id"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/roundbuttonthree"
    android:gravity="center"
    android:text="@string/synchAll_Button_string"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginLeft="71dp"
       android:layout_marginStart="71dp"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recyclerView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/synchAllButton_id" />


</RelativeLayout>